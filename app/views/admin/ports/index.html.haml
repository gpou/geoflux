-content_for :page_title do
  %span.icon-cube>
  = "Ports"
-content_for :breadcrumb do
  %li.current
    = link_to "Ports", admin_ports_path, :title => "Ports"

%ul.middleNavR
  %li
    = link_to "New port", new_admin_port_path, :class => "btn btn-info"

.row
  .col-lg-12
    .panel.panel-default
      .panel-heading
        Ports
      .panel-body
        %table.table.table-striped.table-hover.table-condensed
          %thead
            %tr
              %th Country
              %th Code
              %th Name
              %th Actions
          %tbody
            != render :partial => 'port', :collection => @ports

.clear

