-@page_title = "#{t("activerecord.models.carrier", count: 2)}"
-content_for :breadcrumb do
  %li
    = link_to t("activerecord.models.carrier", count: 2), admin_carriers_path, :title => t("activerecord.models.carrier", count: 2)
  %li.current
    =t("helpers.edit_a_model_fem", :model => t("activerecord.models.carrier", :count => 1))

.row
  .col-lg-12
    .panel.panel-default
      .panel-heading
        %h3.panel-title=t("helpers.edit_a_model_fem", :model => t("activerecord.models.carrier", :count => 1))
      .panel-body
        = bootstrap_nested_form_for @carrier, :url => admin_carrier_path(@carrier), :layout => :horizontal, :label_col => "col-sm-2", :control_col => "col-sm-10", :inline_errors => true, :builder => CustomBootstrapFormBuilder do |f|
          != render :partial => "form", :locals => {:f => f}
