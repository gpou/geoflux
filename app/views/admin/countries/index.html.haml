-@page_title = t("activerecord.models.country", count: 2)
-content_for :breadcrumb do
  %li.current
    = t("activerecord.models.country", count: 2)

.row
  .col-lg-12
    .panel.panel-default
      .panel-heading
        .btn-group.pull-right
          = link_to new_admin_country_path, :class => "btn btn-info btn-sm" do
            %span.glyphicon.glyphicon-plus
            = t("helpers.new_model", model: t("activerecord.models.country", count: 1))
        %h3.panel-title= t("activerecord.models.country", count: 2)
        .clearfix
      .panel-body
        %table.table.table-hover.table-condensed.table-bordered.datatable.datatable-sort-0-asc
          %thead
            %tr
              %th= t("activerecord.attributes.country.code")
              %th= t("activerecord.attributes.country.name")
              %th.text-center= t("helpers.actions")
          %tbody
            != render :partial => 'country', :collection => @countries

.clear

