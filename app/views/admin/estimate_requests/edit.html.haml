-@page_title = "#{t("activerecord.models.estimate_request", count: 2)}"
-content_for :breadcrumb do
  %li
    = link_to t("activerecord.models.estimate", count: 2), admin_estimates_path, :title => t("activerecord.models.estimate", count: 2)
  %li.current
    = link_to @estimate.type.upcase, admin_estimate_path(@estimate)
  %li.current
    =t("helpers.edit_a_model", :model => t("activerecord.models.estimate_request", :count => 1))

.row
  .col-lg-12
    .panel.panel-default
      .panel-heading
        %h3.panel-title
          =t("helpers.edit_a_model", :model => t("activerecord.models.estimate_request", :count => 1))
      .panel-body
        = bootstrap_nested_form_for @estimate_request, :url => admin_estimate_estimate_request_path(@estimate, @estimate_request), :layout => :horizontal, :label_col => "col-sm-2", :control_col => "col-sm-10", :inline_errors => true, :builder => CustomBootstrapFormBuilder do |f|
          != render :partial => "form", :locals => {:f => f}
