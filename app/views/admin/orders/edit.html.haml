-@page_title = "#{t("activerecord.models.order", count: 2)}"
-content_for :breadcrumb do
  %li
    = link_to t("activerecord.models.order", count: 2), admin_orders_path, :title => t("activerecord.models.order", count: 2)
  %li.current
    =t("helpers.edit_a_model", :model => t("activerecord.models.order", :count => 1))

.row
  .col-lg-12
    .panel.panel-default
      .panel-heading
        %h3.panel-title
          =t("helpers.edit_a_model", :model => t("activerecord.models.order", :count => 1))
          = "(#{@order.order_type.upcase})"
      .panel-body
        = bootstrap_nested_form_for @order, :as => :order, :url => admin_order_path(@order), :layout => :horizontal, :label_col => "col-sm-2", :control_col => "col-sm-10", :inline_errors => true, :builder => CustomBootstrapFormBuilder do |f|
          != render :partial => "form", :locals => {:f => f}
