%tr
  %td= link_to contact.email, admin_carrier_contact_path(@carrier, contact)
  %td= contact.first_name
  %td= contact.last_name
  %td= contact.phone
  %td= contact.journey_contacts.count
  %td.text-center
    .btn-group.btn-group-xs
      %a.tablectrl_small.btn.btn-default.tipS{:href => admin_carrier_contact_path(@carrier, contact), :title => t("helpers.view_model", model: t("activerecord.models.contact", count: 1))}
        %span.glyphicon.glyphicon-eye-open
      %a.tablectrl_small.btn.btn-default.tipS{:href => admin_carrier_contact_journey_contacts_path(@carrier, contact), :title => t("activerecord.models.journey_contact", count: 2)}
        %span.glyphicon.glyphicon-resize-small
      %a.tablectrl_small.btn.btn-default.tipS{:href => edit_admin_carrier_contact_path(@carrier, contact), :title => t("helpers.edit_model", model: t("activerecord.models.contact", count: 1))}
        %span.glyphicon.glyphicon-pencil
      = link_to admin_carrier_contact_path(@carrier, contact), :method => :delete, data: { confirm: t("helpers.confirm_delete_model", model: t("activerecord.models.contact", count: 1)) }, :class => "tablectrl_small btn btn-default tipS", :title => t("helpers.delete_model", model: t("activerecord.models.contact", count: 1)) do
        %span.glyphicon.glyphicon-remove
