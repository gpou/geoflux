-@page_title = "#{t("activerecord.models.estimate", count: 2)} - #{t("activerecord.models.#{@estimate_type}", count: 2)}"
-content_for :breadcrumb do
  %li
    = link_to t("activerecord.models.estimate", count: 2), admin_estimates_path, :title => t("activerecord.models.#{@estimate_type}", count: 2)
  %li.current
    = t("activerecord.models.#{@estimate_type}", count: 2)

.row
  .col-lg-12
    .panel.panel-default
      .panel-heading
        %h3.panel-title=t("helpers.new_model", :model => t("activerecord.models.#{@estimate_type}", :count => 1))
      .panel-body
        = bootstrap_nested_form_for @estimate, :as => :estimate, :url => admin_estimates_path(:type => @estimate_type), :layout => :horizontal, :label_col => "col-sm-2", :control_col => "col-sm-10", :inline_errors => true, :builder => CustomBootstrapFormBuilder do |f|
          != render :partial => "#{@estimate_type}_form", :locals => {:f => f}
