-@page_title = t("activerecord.models.estimate", count: 2)
-content_for :breadcrumb do
  %li.current
    = t("activerecord.models.estimate", count: 2)

.row
  .col-lg-12
    .panel.panel-default
      .panel-heading
        %h3.panel-title= t("activerecord.models.estimate", count: 2)
        .clearfix
      .panel-body
        %table.table.table-hover.table-condensed.table-bordered.datatable
          %thead
            %tr
              %th= t("activerecord.attributes.estimate.created_at")
              %th= t("activerecord.attributes.estimate.type")
              %th= t("activerecord.attributes.estimate.customer_id")
              %th= t("activerecord.attributes.estimate.origin_port_id")
              %th= t("activerecord.attributes.estimate.destination_port_id")
              %th= t("activerecord.attributes.estimate.state")
              %th= t("activerecord.attributes.estimate.estimate_requests_count")
              %th.text-center= t("helpers.actions")
          %tbody
            != render :partial => "estimate", :collection => @estimates

.clear

